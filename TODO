docker build -t flask-app .
docker run -p 8080:8080 flask-app

docker tag flask-app:latest safaral1yev05/flask-app:latest
docker push safaral1yev05/flask-app:latest

helm template flask-project ./flask-project
helm install flask-project ./flask-project

export KUBECONFIG=/etc/rancher/k3s/k3s.yaml
sudo chmod 644 /etc/rancher/k3s/k3s.yaml

config -> config maps -> prometheus -> prometheus.yaml -> scrape-configs:
- job_name: 'flask-app'
  metrics_path: /metrics
  static_configs:
    - targets: ['flask-project.default.svc.cluster.local:8080']
      labels:
        app: flask-project